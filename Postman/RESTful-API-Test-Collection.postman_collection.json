{
  "info": {
    "name": "RESTful API - Positive & Negative Tests",
    "description": "Collection for testing restful-api.dev with positive and negative test cases. Verifies HTTP status codes.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://api.restful-api.dev"
    }
  ],
  "item": [
    {
      "name": "GET",
      "item": [
        {
          "name": "GET Object 5 - Positive (200)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "pm.test('Response has id, name and data', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('id');",
                  "    pm.expect(jsonData).to.have.property('name');",
                  "    pm.expect(jsonData).to.have.property('data');",
                  "});",
                  "pm.test('Object id is 5', function () {",
                  "    pm.expect(pm.response.json().id).to.eql('5');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/objects/5"
          }
        },
        {
          "name": "GET Non-existent Object - Negative (404)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 404', function () {",
                  "    pm.response.to.have.status(404);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/objects/99999"
          }
        }
      ]
    },
    {
      "name": "POST",
      "item": [
        {
          "name": "POST New Object - Positive (200)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200 or 201', function () {",
                  "    pm.expect([200, 201]).to.include(pm.response.code);",
                  "});",
                  "pm.test('Response has auto-generated id', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('id');",
                  "});",
                  "pm.test('Response has name and data', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.name).to.eql('Test Product');",
                  "    pm.expect(jsonData.data).to.have.property('price');",
                  "});",
                  "pm.test('Response has createdAt', function () {",
                  "    pm.expect(pm.response.json()).to.have.property('createdAt');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test Product\",\n  \"data\": {\n    \"price\": 99.99,\n    \"color\": \"Blue\"\n  }\n}"
            },
            "url": "{{baseUrl}}/objects"
          }
        },
        {
          "name": "POST Empty Body - Negative (400)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 400 for invalid request', function () {",
                  "    pm.response.to.have.status(400);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{}"
            },
            "url": "{{baseUrl}}/objects"
          }
        }
      ]
    },
    {
      "name": "PUT",
      "item": [
        {
          "name": "PUT Update Object 5 - Positive (200)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "pm.test('Response has updated data', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.name).to.eql('Samsung Galaxy Z Fold2 - Updated');",
                  "    pm.expect(jsonData.data.price).to.eql(599.99);",
                  "});",
                  "pm.test('Response has updatedAt', function () {",
                  "    pm.expect(pm.response.json()).to.have.property('updatedAt');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Samsung Galaxy Z Fold2 - Updated\",\n  \"data\": {\n    \"price\": 599.99,\n    \"color\": \"Black\"\n  }\n}"
            },
            "url": "{{baseUrl}}/objects/5"
          }
        },
        {
          "name": "PUT Non-existent Object - Negative (404)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 404 for non-existent object', function () {",
                  "    pm.response.to.have.status(404);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Non-existent Product\",\n  \"data\": {\n    \"price\": 100\n  }\n}"
            },
            "url": "{{baseUrl}}/objects/99999"
          }
        }
      ]
    },
    {
      "name": "DELETE",
      "item": [
        {
          "name": "DELETE Object 7 - Positive (200)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "pm.test('Response is valid JSON', function () {",
                  "    pm.response.to.be.json;",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "DELETE",
            "header": [],
            "url": "{{baseUrl}}/objects/7"
          }
        },
        {
          "name": "DELETE Non-existent Object - Negative (404)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 404 for non-existent object', function () {",
                  "    pm.response.to.have.status(404);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "DELETE",
            "header": [],
            "url": "{{baseUrl}}/objects/99999"
          }
        }
      ]
    }
  ]
}
